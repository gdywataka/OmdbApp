<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_filme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.labdesenvolvimento.integracaoomdb.FilmeActivity">

    <TextView
        android:text="Genero:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageFilme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:id="@+id/txtGenero"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button"
        android:onClick="voltar" />

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageFilme"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtTitulo"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Duração:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDuracao"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/txtGenero"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Ano:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDuracao"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtAno"
        android:textSize="18sp"
        android:textAlignment="center" />

    <TextView
        android:text="Diretor:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAno"
        android:layout_alignStart="@+id/txtGenero"
        android:id="@+id/txtDiretor"
        android:textSize="18sp"
        android:textAlignment="center" />

    <TextView
        android:text="Titulo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitulo"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/txtAno" />

    <TextView
        android:text="Sinopse:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDiretor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/txtSinopse"
        android:textSize="18sp"
        android:textAlignment="textStart" />
</RelativeLayout>
